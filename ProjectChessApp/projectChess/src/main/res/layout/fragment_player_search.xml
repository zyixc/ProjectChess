<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/profile_search_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:background="@drawable/btnborder"
        android:text="Search"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/player_search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/player_search_editText"
        android:layout_alignRight="@+id/profile_search_btn"
        android:layout_marginBottom="20dp"
        android:textColor="#848b79"
        android:text="Search by Last Name" />

    <EditText
        android:id="@+id/player_search_editText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_search_btn"
        android:layout_marginBottom="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>