<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/player_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#game"
        android:id="@+id/profile_number_of_games"
        android:layout_below="@+id/player_name"
        android:layout_toLeftOf="@+id/most_recent_rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mostRecentRating"
        android:id="@+id/most_recent_rating"
        android:layout_marginLeft="46dp"
        android:layout_above="@+id/profile_number_of_games"
        android:layout_toRightOf="@+id/player_name" />
</RelativeLayout>