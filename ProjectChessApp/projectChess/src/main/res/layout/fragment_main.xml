<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chessbase.MainActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/game_icon"
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:layout_above="@+id/game_search_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp"
        android:src="@drawable/chess" />

    <TextView
        android:id="@+id/game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/game_search_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="ChessMaster"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <Button
        android:id="@+id/game_search_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/player_search_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="83dp"
        android:background="@drawable/btnborder"
        android:text="Move Search"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/player_search_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/game_search_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/btnborder"
        android:text="Player Search"
        android:textColor="#FFFFFF" />

</RelativeLayout>